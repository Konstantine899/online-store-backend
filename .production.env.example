# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# ⚠️  КРИТИЧЕСКИ ВАЖНО: Используйте СИЛЬНЫЕ секреты для production!
# Скопируйте в .production.env и замените ALL значения на реальные
# =============================================================================

NODE_ENV=production
PORT=5000

# CORS (укажите реальные домены вашего фронтенда)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ⚠️  SECRETS - ОБЯЗАТЕЛЬНО замените на криптографически стойкие (32+ символа)
# Используйте команду для генерации: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
COOKIE_PARSER_SECRET_KEY=REPLACE_WITH_STRONG_SECRET_MIN_32_CHARS_BASE64_ENCODED_VALUE_HERE
JWT_ACCESS_SECRET=REPLACE_WITH_STRONG_SECRET_MIN_32_CHARS_BASE64_ENCODED_VALUE_HERE
JWT_REFRESH_SECRET=REPLACE_WITH_STRONG_SECRET_MIN_32_CHARS_BASE64_ENCODED_VALUE_HERE

JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Database (Production)
DIALECT=mysql
SQL_LOGGING=false
MYSQL_HOST=your-production-db-host
MYSQL_PORT=3306
MYSQL_DATABASE=online_store_production
MYSQL_USER=production_user
MYSQL_PASSWORD=STRONG_DB_PASSWORD_HERE

# Security (в production всё должно быть включено)
SECURITY_HELMET_ENABLED=true
SECURITY_CORS_ENABLED=true
SECURITY_CSP_ENABLED=true

# Swagger API Documentation
# ⚠️  В production ОТКЛЮЧЕН по умолчанию для безопасности
# Оставьте false или удалите строку для отключения
SWAGGER_ENABLED=false

# Rate Limiting (строгие лимиты для production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_RPS=3
RATE_LIMIT_GLOBAL_RPM=100
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=15m
RATE_LIMIT_REFRESH_ATTEMPTS=10
RATE_LIMIT_REFRESH_WINDOW=5m
RATE_LIMIT_REG_ATTEMPTS=3
RATE_LIMIT_REG_WINDOW=1m

# Опциональная ротация секретов (для отслеживания)
# JWT_SECRET_ROTATION_DATE=2025-12-31T00:00:00Z
# JWT_SECRET_VERSION=v1
