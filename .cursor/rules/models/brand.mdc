        const brand = await this.findById(id);

        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å—Ç—å –ª–∏ —Ç–æ–≤–∞—Ä—ã —É –±—Ä–µ–Ω–¥–∞
        const productCount = await this.productModel.count({
