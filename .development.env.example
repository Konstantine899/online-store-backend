# Runtime
NODE_ENV=development
PORT=5000

# CORS / Cookies
ALLOWED_ORIGINS=http://localhost:3000
COOKIE_PARSER_SECRET_KEY=please_change_me_dev_secret

# Database
DIALECT=mysql
SQL_LOGGING=true
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3307
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_db_user
MYSQL_PASSWORD=your_db_password

# (Optional) Sequelize CLI
DEV_MYSQL_HOST=127.0.0.1
DEV_MYSQL_PORT=3307
DEV_MYSQL_DATABASE=your_database_name
DEV_MYSQL_USER=your_db_user
DEV_MYSQL_PASSWORD=your_db_password
DEV_DIALECT=mysql

# JWT
# Placeholders only; do NOT commit real secrets
JWT_PRIVATE_KEY=aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
JWT_ACCESS_SECRET=please_change_me_access_secret
JWT_REFRESH_SECRET=please_change_me_refresh_secret
# TTL formats: 15m, 12h, 7d, etc.
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=30d