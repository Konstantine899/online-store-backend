# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Скопируйте в .development.env и замените значения
# =============================================================================

NODE_ENV=development
PORT=5000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Secrets (для dev можно использовать простые значения)
# Для prod/staging ОБЯЗАТЕЛЬНО используйте сильные секреты (32+ символа)
COOKIE_PARSER_SECRET_KEY=dev_cookie_secret_key_change_for_prod
JWT_ACCESS_SECRET=dev_access_secret_key_change_for_prod
JWT_REFRESH_SECRET=dev_refresh_secret_key_change_for_prod

JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Database (локальный Docker или установка)
DIALECT=mysql
SQL_LOGGING=true
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3307
MYSQL_DATABASE=online_store_dev
MYSQL_USER=dev_user
MYSQL_PASSWORD=dev_password

# Sequelize CLI (если используется)
DEV_MYSQL_HOST=127.0.0.1
DEV_MYSQL_PORT=3307
DEV_MYSQL_DATABASE=online_store_dev
DEV_MYSQL_USER=dev_user
DEV_MYSQL_PASSWORD=dev_password
DEV_DIALECT=mysql

# Security (можно отключить для отладки)
SECURITY_HELMET_ENABLED=true
SECURITY_CORS_ENABLED=true
SECURITY_CSP_ENABLED=false

# Swagger API Documentation
# По умолчанию включен в dev/test, отключен в staging/production
# Установите в false для полного отключения в любом окружении
SWAGGER_ENABLED=true

# Rate Limiting (более мягкие лимиты для разработки)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_RPS=10
RATE_LIMIT_GLOBAL_RPM=300
RATE_LIMIT_LOGIN_ATTEMPTS=10
RATE_LIMIT_LOGIN_WINDOW=5m
RATE_LIMIT_REFRESH_ATTEMPTS=20
RATE_LIMIT_REFRESH_WINDOW=5m
RATE_LIMIT_REG_ATTEMPTS=5
RATE_LIMIT_REG_WINDOW=1m
